.Main__section
    .map--section
        padding-top: 15rem
        .contact--container
            background-color: #FF4060
            width 100%
            height 6rem
            color: white
            font-size: 1.5rem
            font-weight: 700
            text-align: center
            line-height: 6rem

@media screen and (max-width 400px)
    .map--section
        .contact--container
            height 4rem
            line-height: 4rem
            font-size: 1rem

@media screen and (min-width 900px)
    .Main__section
        .map--section
            padding-top: 10rem
            .contact--container
                height 4rem
                line-height: 4rem
                font-size: 1.5rem