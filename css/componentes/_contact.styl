.contacto--container
    background-color: #FF4060
    width 6.5rem
    height 6.5rem
    text-align: center
    border-radius: 100rem
    position: absolute
    right  2rem
    bottom: 2rem
    position: fixed
    transition: 0.5s
    span
        line-height: 6.5rem
        color: white
        font-size: 5rem

.contacto--container:hover
    background-color: #55FF37
    transition: 0.5s

@media screen and (min-width 900px)
    .contacto--container
            width 7rem
            height 7rem
            right  3rem
            bottom: 3rem
            span
                line-height: 7rem
                color: white
                font-size: 5.5rem