.Main__section
    width: 100%
    background-color: white
    .img--section
        width 100%
        padding-top: 10rem
        margin 0 auto
        overflow: hidden
        position: relative
        .slider
            display: flex
            width 400%
            height: 50vw
            max-height: 50rem
            margin-left: -100%
            .slider__section
                width 100%
                .slider__img
                    display: block
                    width 100%
                    height: 100%
            
        .contact--container
            background-color: #FF4060
            width 100%
            height 6rem
            line-height: 6rem
            color: white
            font-size: 1.5rem
            font-weight: 700
            text-align: center
            

@media screen and (max-width 400px)
    .Main__section
        .img--section
            .contact--container
                height 4rem
                line-height: 4rem
                font-size: 1.2rem

@media screen and (min-width 900px)
    .Main__section
        width 98vw
        max-width: 100rem
        background-color: white
        .img--section
            .slider
                display: flex
                width 400%
                height: 25rem
                margin-left: -100%
                .slider__section
                    .slider__img
                        width 100%
                        margin: 0 auto
                        object-fit: cover

            .contact--container
                height 4rem
                line-height: 4rem
                font-size: 1.5rem