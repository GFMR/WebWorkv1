.information--container
    width 100%
    p
        padding-top: 1rem
        padding-bottom: 1rem
        font-size: 1.5rem
        text-align: center
        font-weight: 900
    .tarjetas--container
        width 100%
        display: flex
        justify-content: center
        div 
            width: 8rem
            height 4rem
            margin: 0.5rem
            img 
                width 100%
                height 100%
        
    .certificado--container
        font-size: 1.5rem
        text-align: center
        width 20rem
        margin: 0 auto
        font-weight: 900
        margin-top: 2rem
        img 
            width 100%
            height 100%

@media screen and (min-width 900px)
    .information--container

        p
            width 98%
            padding-top: 1rem
            padding-bottom: 1rem
            font-size: 1.5rem
            text-align: end
            font-weight: 900
            right: 0
            color #4F4E4E
        .tarjetas--container
            width 98%
            display: flex
            justify-content: flex-end
            div 
                width: 7rem
                height 4rem
                margin: 0.5rem
                img 
                    width 100%
                    height 100%
                
        .certificado--container
            text-align: end
            font-size: 2rem
            text-align: start
            width 90%
            font-weight: 900
            margin-top: 2rem
            display: flex
            flex-direction: column
            p 
            width: 100%
            color: #4F4E4E
            .certificados
                width 98%
                display: flex
                justify-content: flex-end
                img 
                    width 30%
                    height 100%
