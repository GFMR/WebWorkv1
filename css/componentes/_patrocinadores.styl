.logos--section
    width 100%
    padding-top: 3rem
    padding-bottom: 2rem
    margin 0 auto
    overflow: hidden
    position: relative
    .slider--logo
        display: flex
        width 700%
        height: 10rem
        .slider__section--logo
            width: 20rem
            margin: 0 auto
            .slider__logo
                display: block
                width 100%
                height: 100%

@media screen and (max-width 400px)
    .logos--section
        padding-top: 0
        padding-bottom: 1rem
        .slider--logo
            height: 8rem
            .slider__section--logo
                width: 15rem

@media screen and (min-width 900px)
    .logos--section
        width 100%
        padding-top: 2rem
        padding-bottom: 1rem
        padding-left: 35%
        overflow: hidden
        position: relative  
        .slider--logo
            display: flex
            width 1100%
            height: 10rem
            .slider__section--logo
                width: 18rem
                margin: 0 auto
                .slider__logo
                    display: block
                    width 100%
                    height: 100%
