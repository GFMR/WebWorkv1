.Main__section
    .impresion--section
        width 100%
        padding-top: 15rem
        margin 0 auto
        overflow: hidden
        position: relative
        .impresion--slider
            display: flex
            width 1500%
            height: 50vw
            max-height: 50rem
            margin-left: -100%
            .slider__section--impresion
                width 100%
                .slider__img--impresion
                    display: block
                    width 100%
                    height: 100%
                .text--impresion
                    width 21%
                    height 100%
                    background-color: #FF4060
                    position: absolute
                    text-align: center
                    p   
                        color #FAFAFA 
                        font-size: 3.5vw
                        font-weight: 700
                        padding-top: 21vw

@media screen and (min-width 900px)
    .Main__section
        .impresion--section
            padding-top: 10rem
            .impresion--slider
                display: flex
                width 1500%
                height: 50vw
                max-height: 30rem
                margin-left: -100%
                .slider__section--impresion

                    .slider__img--impresion
                        display: block
                        width 100%
                        height: 100%
                        object-fit: cover
                    .text--impresion
                        width 100%
                        height 4rem
                        background-color: #FF4060
                        position: absolute
                        text-align: center 
                        bottom 0 
                        p   
                            color #FAFAFA 
                            font-size: 1.6rem
                            font-weight: 700
                            padding-top: 1.2rem
                        
                    

            